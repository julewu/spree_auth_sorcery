<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div data-hook="login" class="panel">
  <div class="panel-body">
    <%= form_tag spree.admin_create_new_session_path do %>
      <div id="password-credentials">
        <div class="form-group text-center">
          <%= label_tag :email, Spree.t(:email) %>
          <%= email_field_tag :email, nil, class: 'form-control', tabindex: 1, placeholder: Spree.t(:email) %>
        </div>
        <div class="form-group text-center">
          <%= label_tag :password, Spree.t(:password) %>
          <%= password_field_tag :password, nil, :class => 'form-control', :tabindex => 2, placeholder: Spree.t(:password) %>
        </div>
      </div>
      <div class="checkbox form-group">
        <div class="row">
          <div class="col-md-6">
            <%= label_tag :remember_me do %>
              <%= check_box_tag :remember_me, :tabindex => 3 %>
              <%= Spree.t(:remember_me) %>
            <% end %>
          </div>
          <div class="col-md-6 text-right">
            <%= link_to Spree.t(:forgot_password), admin_recover_password_path %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= submit_tag Spree.t(:login), :class => 'btn btn-primary btn-block', :tabindex => 4 %>
      </div>
    <% end %>
  </div>
</div>

<div data-hook="login_extras"></div>
