<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>

<div id="forgot-password" class="panel">
  <div class="panel-body">
    <h2><%= Spree.t(:change_my_password) %></h2>

    <%= form_for @user, :url => admin_update_password_path, :method => :put do |f| %>
      <div class="form-group text-center">
        <%= f.label :password, Spree.t(:password) %><br />
        <%= f.password_field :password, :class => 'form-control', :tabindex => 1, placeholder: Spree.t(:password) %><br />
      </div>
      <div class="form-group text-center">
        <%= f.label :password_confirmation, Spree.t(:confirm_password) %><br />
        <%= f.password_field :password_confirmation, :class => 'form-control', :tabindex => 2, placeholder: Spree.t(:password) %><br />
      </div>
      <% console %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.submit Spree.t(:update), :class => 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
